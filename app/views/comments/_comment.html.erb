<div class = "comment"><%= comment.content %> </div>
<small>Posted by <%= comment.author %> <%= time_ago_in_words(comment.created_at) %> ago </small>

<div class = "links">
<% if user_signed_in? %>
    <% if comment.author == current_user.email %>
        <%= link_to "Edit", edit_forum_message_comment_path(comment.message.forum, comment.message, comment), class:"small-button button-yellow" %>
        <%= link_to "Delete", forum_message_comment_path(@forum, @message, comment), method: :delete, data: {confirm: "Are you sure you want to delete this important message?"}, class:"small-button button-red" %>
    <% end %>
<% elsif company_signed_in? %>
    <%if comment.author == current_company.email %>
        <%= link_to "Edit", edit_forum_message_comment_path(comment.message.forum, comment.message, comment), class:"small-button button-yellow" %>
        <%= link_to "Delete", forum_message_comment_path(@forum, @message, comment), method: :delete, data: {confirm: "Are you sure you want to delete this important message?"}, class:"small-button button-red" %>
    <% end %>
<% end %>
</div>