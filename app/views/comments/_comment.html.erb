<div class = "comment"><%= comment.content %> </div>
<small>Posted by <%= comment.author %> <%= time_ago_in_words(comment.created_at) %> ago </small>

<div class = "links">
<% if user_signed_in? %>
    <% if comment.author == current_user.email %>
        <%= link_to "Edit", edit_forum_message_comment_path(comment.message.forum, comment.message, comment) %>
        <%= link_to "Delete", edit_forum_message_comment_path(comment.message.forum, comment.message, comment) %>
    <% end %>
<% end %>
</div>